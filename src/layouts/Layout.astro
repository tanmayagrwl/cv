---
import Image from "astro/components/Image.astro";
import DownloadIcon from "../components/icons/DownloadIcon.astro";

interface Props {
  title: string;
  description: string;
  ogId?: string;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description} />
    <title>{Astro.props.title}</title>
    <link rel="preconnect" href="/" crossorigin />
    <link rel="preload" href="/profile.webp" as="image" />
    <link rel="icon" href="/profile.webp" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Jatin"
      href={`${Astro.site}rss.xml`}
    />

    <!-- OpenGraph tags -->
    <meta name="og:title" content={Astro.props.title} />
    <meta property="og:title" content={Astro.props.title} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en" />
    <meta property="og:description" content={Astro.props.description} />
    <meta property="og:site_name" content="Jatin" />
    <meta property="og:url" content="https://cv.jatinkumar.dev" />
    <meta property="og:image" content="https://cv.jatinkumar.dev/profile.png" />

    <!-- Twitter tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@whynotjatin" />
    <meta name="twitter:title" content={Astro.props.title} />
    <meta name="twitter:description" content={Astro.props.description} />

    <!-- Discord -->
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="mx-auto max-w-3xl">
    <header
      class="flex place-content-between place-items-center p-4 pb-2 sm:pt-6 md:px-0"
    >
      <a class="block" href="https://jatinkumar.dev">
        <Image
          loading="eager"
          src="/profile.webp"
          alt="Jatin"
          height={32}
          width={32}
          class="h-8 w-8 rounded-full bg-primary transition-transform duration-200 ease-in-out hover:scale-110 sm:h-10 sm:w-10"
        />
      </a>
      <a
        class="focus-visible:bg-primay-active active:bg-primay-active hover:bg-primary-hover h-8 w-8 rounded-full bg-primary transition-transform duration-200 ease-in-out hover:scale-110 sm:h-10 sm:w-10 flex justify-center items-center cursor-pointer"
        href="/jatin-resume.pdf"
        download="jatin-resume.pdf"
      >
        <DownloadIcon class="h-[1.375rem] w-[1.375rem] stroke-[1.25]" />
      </a>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
